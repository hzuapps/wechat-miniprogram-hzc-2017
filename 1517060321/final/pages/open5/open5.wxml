<!--pages/open5/open5.wxml-->
<view class="page">
  <view class="page__hd">
    <text class="page__title">{{message.title}}</text>
    <text class="page__desc">{{message.body}}</text>
  </view>
  <view class="page__bd">
    <view class="section section_gap" wx:for="{{array}}" wx:for-item="item">
      <view class="section__title">{{item.text}}</view>
      <view class="section__ctn">
        <image style="width: 400px; height: 300px; background-color: #eeeeee;" mode="{{item.mode}}" src="https://infoaas.com/data/sprite/jpg/{{message.image}}"></image>
      </view>
    </view>
  </view>
</view>

